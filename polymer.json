{
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "builds": [{
    "name":"default",
    "addServiceWorker": true,
    "swPrecacheConfig": "sw-precache-config.js",
    "html": {
      "minify": true
    },
    "css": {
      "minify": true
    },
    "js": {
      "minify": true,
      "transformModulesToAmd": true
    }
  }],
  "entrypoint": "index.html",
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "robots.txt",
    "sitemap.xml"
  ]
}